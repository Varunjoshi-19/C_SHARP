<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create New Blog Post</title>
  <link rel="stylesheet" href="CreateBlog.css">
  <link href="https://fonts.googleapis.com/css?family=Inter:400,600,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/yourkitid.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="@Url.Content("~/js/createblog.js")"></script>
    <link rel="stylesheet" href="@Url.Content("~/css/createblog.css")">
</head>
<body>


<nav class="navbar">
        <a href="#" class="logo">
            <img src="https://img.icons8.com/ios-filled/50/009933/leaf.png" alt="logo" />
            Blog Application
        </a>
        <div class="nav-links">
            <a id="home" href="/Route" class="active">Home</a>
            <a id="dashboard" href="/Route/Dashboard">Dashboard</a>
        </div>
    </nav>



  <div class="create-blog-container">
    <h2>Create New Blog Post</h2>
    <form id="createBlogForm">
      <div class="form-row">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" placeholder="Enter blog title">
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          <input type="text" id="author" placeholder="Enter author name">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="category">Category</label>
          <select id="category">
            <option selected disabled>Select a category</option>
            <option>Technology</option>
            <option>Lifestyle</option>
            <option>Travel</option>
            <option>Food</option>
          </select>
        </div>
        <div class="form-group published-group">
          <label for="published">Published</label>
          <label class="switch">
            <input type="checkbox" id="published">
            <span class="slider"></span>
          </label>
          <span class="draft-label">Draft</span>
        </div>
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <textarea id="content" rows="4" placeholder="Write your blog content here..."></textarea>
      </div>
      <div class="form-actions">
        <button type="button" class="btn cancel-btn">Cancel</button>
        <button type="submit" class="btn submit-btn">Create Blog</button>
      </div>
    </form>
  </div>
</body>
</html>
